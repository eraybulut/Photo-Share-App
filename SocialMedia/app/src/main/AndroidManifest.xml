<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.eray.eraygram">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcherrr"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcherrr_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ErayGram"
        tools:targetApi="31">


        <activity
            android:name=".view.UploadActivity"
            android:exported="false" />
        <activity
            android:name=".view.FeedActivity"
            android:exported="false" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
    </activity>
        <activity
            android:name=".view.SiginActivity"
            android:exported="false">

        </activity>
    </application>

</manifest>